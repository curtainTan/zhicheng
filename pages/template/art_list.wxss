/* pages/template/art_list.wxss */
.art-box{
  padding: 10px;
  font-size: 12px;
  margin: 8px 8px;
  border-radius: 4px;
  box-shadow: 0px 1px 3px 1px rgb(180, 180, 180);
  /* border-bottom: 1px solid rgb(197, 197, 197); */
}
.art-box .top{
  display: flex;
  align-items: center;
}
.art-box .top image{
  width: 26px;
  height: 26px;
  border-radius: 13px;
  margin-right: 6px;
}
.art-box .top text{
  color: rgb(172, 172, 172);
}
.art-box .mid{
  height: 90px;
  display: flex;
  justify-content: space-between;
}
.art-box .mid .left .title{
  font-size: 16px;
  color: rgb(116, 116, 116);
  margin: 4rpx 0rpx;
}
.art-box .mid .left .content{
  color: #999;
}
.art-box .mid .right image{
  width: 80px;
  height: 80px;
  border-radius: 6px;
}
.art-box .bottom{
  display: flex;
  margin-top: 4rpx;
  color: #999;
}
.art-box .bottom view{
  display: flex;
  justify-content: center;
  margin-right: 6rpx;
}
.art-box .bottom image{
  width: 16px;
  height: 16px;
  margin-right: 4rpx;
}
