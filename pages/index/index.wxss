/**index.wxss**/

@import '/pages/template/art_list.wxss';

.slide-image{
  width: 100%;
  height: 100%;
}
.section{
  position: relative;
}
.search-box{
  position: absolute;
  top: 20rpx;
  width: 100%;
  z-index: 999;
  display: flex;
  justify-content: center;
}
.search-inbox text{
  margin-right: 10px;
  padding-right: 10px;
  border-right: 1px solid #888;
}
.search-inbox icon{
  margin-right: 4px;
}
.search-inbox{
  display: flex;
  align-items: center;
  padding-left: 20px;
  font-size: 12px;
  width: 80%;
  border-radius: 20px;
  height: 25px;
  background-color: rgba(190, 184, 184, .4);
}
.search-input{
  width: 50%;
}
.addmore{
  text-align: center;
  color: rgb(255, 0, 0);
  font-size: 12px;
  margin-bottom: 8px;
}