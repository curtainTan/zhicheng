/* pages/me/me.wxss */
.me{
  height: 100vh;
  background-color: #f8f8f8;
}
.me-box .logo{
  padding-top: 120px;
  text-align: center;
}
.me-box .logo image{
  height: 350rpx;
  width: 350rpx;
}
.form-box{
  width: 80%;
  margin: 0 auto;
  margin-top: 30px;
}
.form-box button{
  margin-bottom: 50rpx;
}

.me-top{
  margin: 8px;
  border-radius: 4px;
  padding: 20px 10px 20px 15px;
  display: flex;
  align-items: center;
  font-size: 18px;
  box-shadow: 0px 0px 1px 1px rgb(240, 238, 238);
  margin-bottom: 14px;
}
.me-top image{
  height: 140rpx;
  width: 140rpx;
  border-radius: 100%;
  margin-right: 20px;
}

.me-mid .me-one{
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-radius: 3px;
  padding: 10px;
  font-size: 12px;
  box-shadow: 0px 1px 2px 0px rgb(204, 204, 204);
  margin: 2px 8px;
  color: rgb(90, 90, 90);
}
.me-mid .me-one view{
  display: flex;
  align-items: center;
}
.me-mid .me-one image{
  width: 20px;
  height: 20px;
  margin-right: 6px;
}

.switch{
  font-size: 10px;
  color: rgb(173, 173, 173);
  text-align: center;
  margin: 20px 0px;
}

.usersign{
  font-size: 12px;
  color: rgb(105, 98, 93);
}
.useremail{
  font-size: 10px;
  color: rgb(37, 37, 37);
  margin: 10px 0px;
}

.logout{
  margin: 8px;
  font-size: 14px;
}

/* 波纹动画 */
.ripple {
    background-color: rgba(0, 0, 0, 0.849);
    border-radius: 100%;
    height:10px;
    width:10px;
    margin-top: -90px;
    position: absolute;
    -webkit-transform: scale(0);
}
@-webkit-keyframes ripple {
    100% {
    -webkit-transform: scale(20);
    transform: scale(20);
    background-color: transparent;
    }
}

