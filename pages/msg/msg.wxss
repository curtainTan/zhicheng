/* pages/msg/msg.wxss */
.msg-top{
  display: flex;
  justify-content: space-around;
  margin: 10px 5px;
  border-radius: 3px;
  box-shadow: 0px 2px 4px 2px rgb(219, 219, 219);
  position: sticky;
  top: 0px;
  background-color: #fff;
}
.msg-top view{
  flex: 1;
  text-align: center;
  font-size: 14px;
  padding: 6px 0px;
}
.msg-top .topselect{
  color: rgb(255, 76, 22);
}

/* 单个文章 */

.msg-content .one-msg{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 12px;
  font-size: 14px;
  border-radius: 4px;
  box-shadow: 0px 2px 4px 2px rgb(219, 219, 219);
  margin: 8px;
}
.msg-content .one-msg .one-msg-left .msg-user image{
  width: 20px;
  height: 20px;
  border-radius: 10px;
  margin-right: 6px;
}
.msg-content .one-msg .one-msg-left .msg-user text{
  margin-right: 8px;
}
.msg-content .one-msg .one-msg-left .msg-user{
  display: flex;
  align-items: center;
  margin: 6px 0px;
}
.msg-user-time{
  font-size: 8px;
  color: rgb(107, 107, 107);
}
.msg-content .one-msg .one-msg-left{
  flex: 1;
}
.msg-content .one-msg .msg-about .msg-about-r image{
  width: 16px;
  height: 16px;
  margin-right: 5px;
}
.msg-content .one-msg .msg-about{
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}
.msg-content .one-msg .msg-about .text{
  overflow: hidden;
  height: 16px;
}
.msg-about-r{
  display: flex;
  align-items: center;
}
.one-msg-r{
  width: 30%;
  height: 68px;
  margin-left: 4px;
}
.one-msg-r image{
  height: 100%;
  width: 100%;
  border-radius: 4px;
}
.msg-user, .msg-about{
  font-size: 10px;
  color: #999;
}

.msg-bouttom{
  text-align: center;
  font-size: 10px;
  color: rgb(175, 175, 175);
  margin-bottom: 12px;
}