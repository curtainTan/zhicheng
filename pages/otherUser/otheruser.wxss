/* pages/otherUser/otheruser.wxss */
.user-top .bg{
  height: 120px;
  background-image: url('http://curtaintan.club/bg/1546081994339.jpg');
  background-repeat: no-repeat;
  background-size: 100%;
}
.user-top .user-top-bottom{
  position: relative;
  top: -30px;
  padding-left: 20px;
  box-shadow: 0px 3px 4px 0px rgb(197, 197, 197);
}
.user-top .user{
  display: flex;
  align-items: flex-end;
  font-size: 16px;
}
.user-top .user image{
  width: 80px;
  height: 80px;
  border-radius: 100%;
  border: 4px solid #fff;
  margin-right: 10px;
}
.user-top .user .user-about{
  font-size: 12px;
  color: rgb(182, 182, 182);
  margin-top: 12px;
}
.user-top .user .user-about text{
  margin-right: 8px;
}
.user-top .introduce{
  font-size: 16px;
  margin: 14px 0px;
  color: rgb(102, 102, 102);
}
.user-top .other{
  font-size: 10px;
  color: rgb(175, 175, 175);
  padding-bottom: 8px;
}


.user-bottom{
  position: relative;
  top: -30px;
}


/* 相似的下半部分 */
.label{
  display: flex;
  justify-content: space-around;
  margin: 10px 5px;
  border-radius: 3px;
  box-shadow: 0px 2px 4px 2px rgb(219, 219, 219);
  position: sticky;
  top: 0px;
  background-color: #fff;
}
.label view{
  flex: 1;
  text-align: center;
  font-size: 14px;
  padding: 6px 0px;
  color: rgb(170, 168, 168);
}
.label .topselect{
  color: rgb(255, 76, 22);
}


.hot-com{
  margin: 8px;
  border-radius: 4px;
  box-shadow: 0px 2px 4px 2px rgb(219, 219, 219);
  font-size: 14px;
  padding: 8px 10px;
}
.hot-com .hot-com-bottom{
  display: flex;
  justify-content: space-between;
  margin: 6px 0px;
}
.hot-com-bottom-left .left-user{
  display: flex;
  align-items: center;
  font-size: 10px;
  color: rgb(179, 179, 179);
}
.hot-com-bottom-left .left-user image{
  width: 20px;
  height: 20px;
  border-radius: 10px;
  margin-right: 8px;
}

.hot-com-bottom-left .left-user .icon{
  display: flex;
  align-items: center;
  margin: 0px 8px;
}
.hot-com-bottom-left .left-user .icon image{
  height: 16px;
  width: 16px;
  margin: 0px 4px;
}
.hot-com-bottom-r image{
  width: 80px;
  height: 60px;
  border-radius: 8px;
}
.title{
  margin: 8px 0px;
  color: #999;
  font-size: 11px;
}

.totop-img{
  width: 20px;
  height: 20px;
  margin-right: 6px;
}
.totop{
  display: flex;
  align-items: center;
  font-size: 12px;
  color: rgb(255, 76, 22);
}